
public class TestaCondicional2 {

	public static void main(String[] args) {
		System.out.println("Testando condicionais.");
		
		int idade = 17;
		int quantidadePessoas = 1;
		
		if (idade >=18 || quantidadePessoas >=2 ) {
			System.out.println("Você pode entrar pois tem mais de 18 anos.");
			System.out.println("Seja bem vindo");
		} else {
			if (quantidadePessoas >= 2) {
				System.out.println("Apesar de menor de 18 anos, você pode entrar pois esta acompanhado");
			} else {
				
				System.out.println("Infelizmente você nao pode entrar pois tem menos de 18 anos e está desacompanhado");
			}
		}
	}
}
